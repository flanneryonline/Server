#!/usr/bin/env bash

set -o errexit
set -o nounset

function zfast_datasets {

zfs create -o mountpoint=/usr "zfast/usr"
zfs create "zfast/usr/local"
zfs create -o mountpoint=/var "zfast/var"
zfs create -o setuid=off "zfast/var/tmp"
zfs create -o mountpoint=/tmp "zfast/tmp"
zfs create -o mountpoint=/usr/home "zfast/home"
zfs create -o mountpoint=/usr/ports "zfast/ports"

return 0

}
