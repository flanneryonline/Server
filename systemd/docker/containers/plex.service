[Unit]
Description=Service running plex in Docker.
Requires=docker-create.service
After=docker-create.service

[Service]
Restart=always
ExecStartPre=/usr/bin/docker start plex
ExecStartPre=/opt/server/bin/health-check plex
ExecStart=/usr/bin/docker wait plex
ExecStop=/usr/bin/docker stop plex

[Install]
WantedBy=multi-user.target