[Unit]
Description=Service running hydra in Docker.
Requires=docker-create.service
Requires=pia.service
After=docker-create.service
After=pia.service

[Service]
ExecStartPre=/usr/bin/docker start hydra
ExecStart=/usr/bin/docker wait hydra
ExecStop=/usr/bin/docker stop hydra

[Install]
WantedBy=multi-user.target