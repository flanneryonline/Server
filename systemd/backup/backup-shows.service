[Unit]
Description=Service for syncing shows to backup host.
Requires=nfs-client.target zfs.target
After=nfs-client.target zfs.target

[Service]
Type=oneshot
User=root
Group=root
ExecStart=/usr/bin/rsync -aqHXAp --delete /mnt/media/shows/* /mnt/backup/media/shows/

[Install]
WantedBy=multi-user.target