#!/usr/bin/env bash

. ${SERVER_INSTALL:-/opt}/server/include

version=1

echo "Starting ${0##*/} patch on pid $$."
check_pid ${0##*/} $$ && exit 0
check_version $version ${0##*/} && exit 0

[ -f /etc/hostname ] && rm /etc/hostname
echo $SERVER_HOSTNAME > /etc/hostname

[ -f /etc/hosts ] && rm /etc/hosts
echo "127.0.0.1 localhost" > /etc/hosts
echo "127.0.0.1 $SERVER_FQDN $SERVER_HOSTNAME" >> /etc/hosts

set_version $version ${0##*/}
echo "Completed ${0##*/} patch on pid $$."
exit 0
