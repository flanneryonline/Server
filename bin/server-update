#!/usr/bin/env bash

. /etc/server/environment
. /etc/server/include

docker_compose_update

apt-get update -qq
errorcheck && echoerr "error during apt-get update" && exit 1
apt-get upgrade -qq --no-install-recommends
errorcheck && echoerr "error during apt-get upgrade" && exit 1
apt-get dist-upgrade -qq --no-install-recommends
errorcheck && echoerr "error during apt-get dist-upgrade" && exit 1

exit 0