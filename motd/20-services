#!/usr/bin/env bash

echo ""
echo "Failed Services:"
end="All good!"

for service in $(ls /opt/server/docker)
do
    # Color the next line green if it's active, else red
    if [ "$(systemctl is-active "docker@$service.service")" != "active" ]; then
	    echo -e "  $service: \e[31mâ–² Failed\e[0m"
        end="FAIL"
    fi
done
if [ "$end" != "FAIL" ]; then
    echo "$end"
fi